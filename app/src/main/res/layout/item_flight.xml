<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_flight_logo"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:contentDescription="Airline Image"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tv_flight_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Qatar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_flight_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05:55 – 08:30"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_flight_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2h 40m | non-stop"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_flight_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹9,000"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_booking_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Paytm"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:srcCompat="@drawable/ic_flight_click"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>

</LinearLayout>